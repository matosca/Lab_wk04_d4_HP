<form action="/students/<%=@student.id%>" method="post">

  <label for="first-name">First Name:</label>
  <input type="text" name="first_name" value="<%=@student.first_name%>">

  <label for="last-name">Last Name:</label>
  <input type="text" name="last_name" value="<%=@student.last_name%>">

  <label for="house">House:</label>
  <select name="house">
    <option value="Griffindor" <%="selected" if @student.house == "Griffindor"%>>Griffindor</option>
    <option value="Slytherin" <%="selected" if @student.house == "Slytherin"%>>Slytherin</option>
    <option value="Ravenclaw" <%="selected" if @student.house == "Ravenclaw"%>>Ravenclaw</option>
    <option value="Hufflepuff" <%="selected" if @student.house == "Hufflepuff"%>>Hufflepuff</option>
  </select>

  <label for="age">Age:</label>
  <input type="number" name="age" value="<%=@student.age%>">

  <input type="submit" name="update" value="Update">
</form>
